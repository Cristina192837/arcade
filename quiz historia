// Exemple de pregunta
const pregunta = {
  text: "Qui va ser el primer rei d'Espanya?",
  resposta: "Jaume I"
};

// Mostrar la pregunta a la web
document.getElementById('pregunta').textContent = pregunta.text;

// Quan cliquem el botó, mostrar la resposta
document.getElementById('mostra-resposta').addEventListener('click', () => {
  alert(pregunta.resposta);
});
[
  { "pregunta": "Qui va ser el primer rei d'Espanya?", "resposta": "Jaume I" },
  { "pregunta": "En quin any va començar la Primera Guerra Mundial?", "resposta": "1914" },
  { "pregunta": "Quina va ser la causa principal de la Revolució Francesa?", "resposta": "Desigualtat social i econòmica" }
]
fetch('preguntes.json')
  .then(res => res.json())
  .then(dades => {
    let index = 0;

    function mostrarPregunta() {
      document.getElementById('pregunta').textContent = dades[index].pregunta;
    }

    document.getElementById('mostra-resposta').addEventListener('click', () => {
      alert(dades[index].resposta);
      index++;
      if(index < dades.length) mostrarPregunta();
      else alert("Has acabat el quiz!");
    });

    mostrarPregunta();
  });
